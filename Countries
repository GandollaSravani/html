        <script>
          function myFunction(){

              console.log("Function is running");
             var x=document.getElementById("search").value;
             var element =[];
             element=document.getElementsByClassName('opt');
             console.log(element);
            for (var i=0; i<=element.length;i++){

              var option=element[i].innerHTML;
              // element[i]==option[0];
